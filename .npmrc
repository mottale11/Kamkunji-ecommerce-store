# Use the latest npm
engine-strict=true

# Set the Node.js version
node-version=20.x

# Enable legacy peer deps to handle React 19 compatibility
legacy-peer-deps=true

# Set registry to npm
registry=https://registry.npmjs.org/

# Increase network timeout to 10 minutes
fetch-timeout=600000
request-timeout=600000

# Disable package-lock.json in CI
package-lock=false

# Prefer offline when possible
prefer-offline=true

# Set cache settings
cache-min=9999999
cache-max=0

# Disable progress bar for CI
progress=false
